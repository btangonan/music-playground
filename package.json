{
  "name": "music-playground",
  "private": true,
  "packageManager": "pnpm@8.15.9",
  "workspaces": ["apps/*","packages/*","shared/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "size": "size-limit"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.6.0",
    "size-limit": "^11.1.4",
    "@size-limit/file": "^11.1.4"
  },
  "size-limit": [
    {
      "name": "composer bundle",
      "path": "apps/composer/dist/assets/*.js",
      "limit": "180 KB"
    }
  ]
}
